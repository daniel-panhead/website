<style>
  .highlights {
    display: flex;
    flex-direction: column;
    gap: 28px;
    padding: 12px var(--default-padding-x);

    @media (min-width: 768px) {
      gap: 28px;
      padding: 24px var(--default-padding-x-md);
    }
    @media (min-width: 1024px) {
      padding: 24px var(--default-padding-x-lg);
    }
  }

  .highlights-container {
    display: flex;
    flex-direction: column;
    gap: 20px;
    @media (min-width: 1024px) {
      flex-direction: row;
      gap: 40px;
    }
    @media (min-width: 1280px) {
      gap: 60px;
    }
  }

  .primary-icon {
    color: var(--primary);
    background-color: var(--primary-text);
    border-radius: 9999px;
    padding: 8px;
  }
  .secondary-icon {
    color: var(--secondary);
    background-color: var(--secondary-text);
    border-radius: 9999px;
    padding: 8px;
  }
  .tertiary-icon {
    color: var(--tertiary);
    background-color: var(--tertiary-text);
    border-radius: 9999px;
    padding: 8px;
  }
</style>
